<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fkp.dao.PermissionDao">
    <select id="findByRoleId" parameterType="java.lang.Integer" resultType="com.fkp.pojo.Permission">
        select p.* from t_permission p,t_role_permission rp where rp.permission_id = p.id and rp.role_id = #{roleId}
    </select>
</mapper>