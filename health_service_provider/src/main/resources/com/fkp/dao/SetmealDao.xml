<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fkp.dao.SetmealDao">
    <resultMap id="baseResultMap" type="com.fkp.pojo.Setmeal">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="code" property="code"/>
        <result column="helpCode" property="helpCode"/>
        <result column="sex" property="sex"/>
        <result column="age" property="age"/>
        <result column="price" property="price"/>
        <result column="remark" property="remark"/>
        <result column="attention" property="attention"/>
        <result column="img" property="img"/>
    </resultMap>
    
    <resultMap id="findByIdResultMap" type="com.fkp.pojo.Setmeal" extends="baseResultMap">
        <collection property="checkGroups" javaType="java.util.ArrayList" ofType="com.fkp.pojo.CheckGroup" column="id" select="com.fkp.dao.CheckGroupDao.findCheckGroupById">

        </collection>
    </resultMap>


    <insert id="add" parameterType="com.fkp.pojo.Setmeal">
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            select LAST_INSERT_ID()
        </selectKey>
        insert into t_setmeal(name, code, helpCode, sex, age, price, remark, attention, img)
        values(#{name},#{code},#{helpCode},#{sex},#{age},#{price},#{remark},#{attention},#{img})
    </insert>

    <insert id="addSetmealCheckgroupRel">
        insert into t_setmeal_checkgroup(setmeal_id, checkgroup_id) values(#{setmealId},#{checkgroupId})
    </insert>

    <!--分页查询-->
    <select id="selectByCondition" parameterType="java.lang.String" resultType="com.fkp.pojo.Setmeal">
        select * from t_setmeal
        <if test="value != null and value.length > 0">
            where code = #{value} or helpCode = #{value} or name = #{value}
        </if>
    </select>

    <select id="findAll" resultType="com.fkp.pojo.Setmeal">
        select * from t_setmeal
    </select>

    <select id="findSetmealById" parameterType="java.lang.Integer" resultType="com.fkp.pojo.Setmeal">
        select * from t_setmeal where id = #{id}
    </select>

    <select id="findCheckGroupIdsBySetmealId" parameterType="java.lang.Integer" resultType="java.lang.Integer">
        select checkgroup_id from t_setmeal_checkgroup where setmeal_id = #{id}
    </select>

    <select id="findById" parameterType="java.lang.Integer" resultMap="findByIdResultMap">
        select * from t_setmeal where id = #{id}
    </select>
</mapper>