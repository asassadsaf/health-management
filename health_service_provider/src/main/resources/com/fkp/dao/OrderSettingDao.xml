<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fkp.dao.OrderSettingDao">

    <insert id="add" parameterType="com.fkp.pojo.OrderSetting">
        insert into t_ordersetting(orderDate, number, reservations) values(#{orderDate},#{number},#{reservations})
    </insert>

    <select id="findCountByOrderDate" parameterType="java.util.Date" resultType="long">
        select count(1) from t_ordersetting where orderDate = #{date}
    </select>

    <update id="editNumberByOrderDate" parameterType="com.fkp.pojo.OrderSetting">
        update t_ordersetting set number = #{number} where orderDate = #{orderDate}
    </update>

    <select id="getOrderSettingByMonth" parameterType="java.util.Map" resultType="java.util.Map">
        select orderDate,number,reservations from t_ordersetting where orderDate between #{begin} and #{end}
    </select>

    <update id="editNumberByDay" parameterType="com.fkp.pojo.OrderSetting">
        update t_ordersetting set number = #{number} where orderDate = #{orderDate}
    </update>

    <select id="findByOrderDate" resultType="com.fkp.pojo.OrderSetting" parameterType="java.util.Date">
        select * from t_ordersetting where orderDate = #{orderDate}
    </select>

    <update id="editReservationsByOrderDate" parameterType="com.fkp.pojo.OrderSetting">
        update t_ordersetting set reservations = #{reservations} where orderDate = #{orderDate}
    </update>
</mapper>